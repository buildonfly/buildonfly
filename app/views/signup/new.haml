- if flash.now[:error]
  %p.alert.alert-danger= flash.now[:error]
= form_tag signup_path do
  %input.form-control(type="email" name="email" placeholder="Enter email" required=true)
  %input.form-control(type="text" name="fullname" placeholder="Enter Fullname" required=true)
  %input.form-control(type="password" name="password" placeholder="Enter password" required=true)
  %input.form-control(type="password" name="confirm_password" placeholder="Confirm password" required=true)
  %button.btn.btn-primary(type="submit") Join